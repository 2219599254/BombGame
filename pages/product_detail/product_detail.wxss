.bottom_btn{
    width: 100%;
    height: 110rpx;
    border-top: 2rpx solid #DDDDDD;
    position: fixed;
    bottom: 0;
    /* background-color: #FF393A; */
}
.bottom_btn .aaa{
    width: 100%;
    height: 100%;
}
.bottom_btn .btn{
    float: left;
    text-align: center;
    height: 110rpx;
}
.bottom_btn .index_btn{
    width: 110rpx;
    height: 110rpx;
    line-height: 112rpx;
    border-right: 2rpx solid #DDDDDD;
    background-color: #FFF;
    position: relative;
}
.bottom_btn .gou_btn{
    width: 110rpx;
    height: 110rpx;
    line-height: 112rpx;
    border-right: 2rpx solid #DDDDDD;
    background-color: #FFF;
    position: relative;
}
.index_btn image,.gou_btn image{
    position: absolute;
    top: 50%;
    left: 50%;
    overflow: hidden;
    background-color: #fff;
    -webkit-transition-property: -webkit-transform,opacity;
    transition-property: transform,opacity;
    transform: translate(-50%, -50%);
}
.gou_btn .red_view{
    width: 18rpx;
    height: 18rpx;
    /* background-color: #FB1B1B; */
    border-radius: 50%;
    position: absolute;
    top: 28rpx;
    right: 20rpx;
}
.bottom_btn .now_buy{
    width: 638rpx;
    height: 110rpx;
    line-height: 112rpx;
    color: #FFF;
}
.bottom_btn .liji_canyu1{
    width: 318rpx;
    height: 110rpx;
    line-height: 112rpx;
    color: #FF393A;
    background-color: #FFF;
}
.bottom_btn .liji_canyu2{
    width: 318rpx;
