.product_title{
    padding: 0 24rpx;
    border-bottom: 2rpx solid #e7e7e7;
    background-color: #FFF;
}
.product_title .title{
    padding-top: 24rpx;
    margin-bottom: 24rpx;
    width: 600rpx;
    color: #333;

    overflow:hidden;
    text-align:left;
    word-break:break-all;
    white-space:normal;
    display:-webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
}
.money_mun{
    position: relative;
    padding-bottom: 20rpx;
}
.money_mun .money{
    color: #FB1B1B;
}
.money_mun .money .num{
