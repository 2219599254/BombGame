    position: absolute;
    right: 12rpx;
    top: 12rpx;
}
.money_mun .rel_m_price{
    color: #999;
    font-size: 20rpx;
    margin-left: 6rpx;
    position: relative;
    line-height: 40rpx;
}
.money_mun .rel_m_price .num2{
    font-size: 28rpx;
}
.money_mun .rel_m_price .line{
    width: 100%;
    height: 2rpx;
    background-color: #999;
    position: absolute;
    top: 10rpx;
    left: 0;
}
.service:after{
    clear:both;
    content:'.';
    display:block;
    width: 0;
    height: 0;
    visibility:hidden;
}
.service{
    /* height: 100rpx; */
    line-height: 67rpx;
    padding: 0 24rpx;
    background-color: #FFF;
}
.service .b1{
    float: left;
    padding-right: 16rpx;
    font-size: 28rpx;
}
.service .b1 image{
    position: relative;
    top: 6rpx;
    margin-right: 10rpx;
}
.service .b1 .text{
    font-size: 24rpx;
    color: #999;
}

.img_box{
    padding: 40rpx;
