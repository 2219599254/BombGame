/* pages/video_detail/video_detail.wxss */
.container{
  height: 100%;
}
.my_container{
  width: 100%;
  padding-bottom:126rpx;
  background-color: #F5F5F5;
}

.myVideo_box{
  width: 100%;
  font-size: 0;
  background-color: #FFF;
  margin-bottom: 24rpx;
}
.myVideo_box #myVideo{
  width: 100%;
  height: 350rpx;
}

.title {
  height: 100rpx;
  line-height: 100rpx;
  display: inline-flex;
  width: 750rpx;
  background-color: #fff;
}
.title .a1 {
  width: 5rpx;
  height: 32rpx;
  background-color: #f00;
  margin: 34rpx 18rpx 0 24rpx;
}
.title .a2 {
  width: 600rpx;
}

.comment_people_list{
  padding: 0 24rpx;
  text-align: right;
  background: #FFF;
}
.comment_people{
  border-bottom: 2rpx solid #EBEBEB;
  padding-bottom: 20rpx;
}
.comment_people:last-child{
  border: 0;
}
.top_cont_box:after,.left_input:after{
  content:"";
  height:0;
  line-height:0;
  display:block;
  visibility:hidden;
  clear:both;
}
.comment_people_list .top_cont_box{
  height: 100rpx;
  line-height: 100rpx;
}
.top_cont_box .image1{
  float: left;
  position: relative;
  top: 16rpx;
  margin-right: 16rpx;
}
.top_cont_box .text1{
  float: left;
}
.cont_detail{
  color: #666;
  text-align: left;
  padding-right: 20rpx;

  overflow:hidden;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}

.video_info:after{
  content:"";
  height:0;
  line-height:0;
  display:block;
  visibility:hidden;
  clear:both;
}
.video_info,.raiders_list .video_info{
  font-size: 24rpx;
  color: #999;
  height: 68rpx;
  line-height: 68rpx;
  padding: 0 24rpx;
  text-align: right;
}
.video_info .image1,.raiders_list .video_info .image1{
  position: relative;
  top: 10rpx;
}

/*底部输入  */
.bottom_input_send{
  width: 100%;
  height: 116rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #FFF;
}
.left_input{
  padding: 24rpx;
  height: 68rpx;
  line-height: 68rpx;
  padding-right: 30rpx;
}
.inp_1{
  width: 75%;
  height: 68rpx;
  padding-left:24rpx;
  line-height: 68rpx;
  border-bottom:1px solid #EBEBEB;
  font-size: 28rpx;
  display: inline-block;
  color: #666;
}
.left_input span{
  float: right;
  position: relative;
}
.left_input image{
  float: right;
  position: relative;
  top: 16rpx;
}
.video_share_btn{
  float: right;
  background: #FFF;
  width: 36rpx;
  height:68rpx;
  line-height:68rpx;
  font-size: 28rpx;
  text-align: center;
  padding: 0;
}
button::after {
  border: 0;
}